{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",  
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./*" ],
      "@/*": [ "./*" ],
      "assets/*": [ "assets/*" ],
      "static/*": [ "static/*" ]
    }
  },
  "exclude": [
    "node_modules/**/*.ts",
    "node_modules/**/*.vue"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.vue"
  ]
}